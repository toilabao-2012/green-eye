<button onClick={() => setAlarmType("alarm")} style={{ padding: 8, borderRadius: 8, border: alarmType === "alarm" ? "2px solid #16a34a" : "1px solid #e5e7eb" }}>üîî Alarm</button>
                    <button onClick={() => setAlarmType("siren")} style={{ padding: 8, borderRadius: 8, border: alarmType === "siren" ? "2px solid #16a34a" : "1px solid #e5e7eb" }}>üöì Siren</button>
                    <button onClick={() => setAlarmType("bell")} style={{ padding: 8, borderRadius: 8, border: alarmType === "bell" ? "2px solid #16a34a" : "1px solid #e5e7eb" }}>‚è∞ Bell</button>
                  </div>
                </div>

                {/* message & automatic pick simulation */}
                <div style={{ marginTop: 12 }}>
                  {message && <div style={{ padding: 12, borderRadius: 8, background: isAlertActive ? "#fee2e2" : "#ecfdf5", color: isAlertActive ? "#991b1b" : "#065f46", fontWeight: 600 }}>{message}</div>}
                  {isAlertActive && (
                    <div style={{ marginTop: 12 }}>
                      {/* T·ª± ƒë·ªông t·∫Øt khi ph√°t hi·ªán 'nh·∫∑t r√°c' th·ª±c t·∫ø: ·ªü demo ta c√≥ n√∫t m√¥ ph·ªèng,
                          trong th·ª±c t·∫ø: backend/AI s·∫Ω g·ª≠i event "nh·∫∑t r√°c" t·ª± ƒë·ªông v√† g·ªçi handlePickTrash() */}
                      <button onClick={handlePickTrash} style={{ marginTop: 8, ...btn("#16a34a") }}>üßπ ƒê√£ nh·∫∑t r√°c (m√¥ ph·ªèng)</button>
                    </div>
                  )}
                </div>

                {/* audio tag */}
                <audio ref={alarmRef} loop>
                  <source src={`/${alarmType}.mp3`} type="audio/mpeg" />
                  Tr√¨nh duy·ªát kh√¥ng h·ªó tr·ª£ ph√°t √¢m thanh.
                </audio>
              </div>
            )}
          </main>
        </div>
      )}
    </div>
  );
}
